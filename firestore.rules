rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Acesso ao Firestore é feito APENAS pelo backend (Flask) via Firebase Admin SDK
    // com credentials.json / Application Default Credentials. Não há acesso direto
    // do cliente (browser/mobile) ao Firestore. Regras abaixo negam todo acesso
    // direto para evitar uso indevido caso alguém tente acessar o banco fora do app.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
